#!/bin/sh

GTKDIALOG=gtkdialog

export MAIN_DIALOG='
<vbox>
  <hbox>
    <text>
      <label>whoami:</label>
    </text>
    <entry>
      <input>whoami</input>
      <variable>ENTRY</variable>
    </entry>
  </hbox>
  <hbox>
    <button ok></button>
    <button cancel></button>
  </hbox>
</vbox>
'

$GTKDIALOG --program=MAIN_DIALOG
