#!/bin/sh

## Includes.
. funcCoverSet
. funcTrackInfoSet

## Refresh the required widgets.

funcRefresh() {
	if [ -z "$BASH" ]; then local FUNCNAME=funcRefresh; fi
	if [ $DEBUG_TRANSITS -ne 0 ]; then echo "$FUNCNAME: IN"; fi

	funcCoverSet
	funcTrackInfoSet

	if [ $DEBUG_TRANSITS -ne 0 ]; then echo "$FUNCNAME: OUT"; fi
}
